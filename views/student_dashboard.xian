{{> head}}
<body class="bg-gradient-to-br from-gray-50 via-blue-100 to-indigo-200 min-h-screen font-sans">
  <!-- Navbar -->
  <nav class="flex justify-between items-center px-6 md:px-10 py-4 bg-white/80 backdrop-blur-lg shadow-sm sticky top-0 z-50 border-b border-gray-200/80">
    <div class="text-xl font-bold text-gray-800 tracking-tight">
      Student Portal
    </div>
    <a href="/logout" class="flex items-center gap-2 bg-red-500 hover:bg-red-600 text-white font-semibold px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 002 2h3a2 2 0 002-2V7a2 2 0 00-2-2h-3a2 2 0 00-2 2v1" />
      </svg>
      <span class="hidden sm:inline">Logout</span>
    </a>
  </nav>

  <!-- Main Content -->
  <div class="container mx-auto p-4 md:p-8">
    <div class="bg-white/60 backdrop-blur-xl p-6 md:p-8 rounded-2xl shadow-lg border border-gray-200/80">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

        <!-- Left Column: Profile & Info -->
        <div class="md:col-span-2 flex flex-col items-center md:items-start text-center md:text-left">
          <div class="relative mb-5">
            <img src="{{student.photo}}" alt="Student Photo" 
                 class="w-36 h-36 rounded-full border-4 border-white shadow-xl transform hover:scale-105 transition-transform duration-300" />
            <span class="absolute bottom-2 right-2 bg-green-500 w-5 h-5 rounded-full border-2 border-white animate-pulse" title="Online"></span>
          </div>
          
          <h1 class="text-4xl font-extrabold text-gray-800 tracking-tight">{{student.first_name}} {{student.last_name}}</h1>
          <p class="text-lg text-gray-500 mt-1">Welcome back to your portal!</p>

          <div class="w-full border-t my-6"></div>

          <!-- Student Details -->
          <div class="space-y-4 text-left w-full">
            <div class="flex items-center gap-4">
              <div class="bg-blue-100 text-blue-600 p-3 rounded-lg"><span class="font-semibold text-xl">ğŸ“</span></div>
              <div>
                <p class="text-sm text-gray-500">Student Number</p>
                <p class="font-semibold text-gray-700 font-mono">{{student.student_number}}</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="bg-blue-100 text-blue-600 p-3 rounded-lg"><span class="font-semibold text-xl">ğŸ“š</span></div>
              <div>
                <p class="text-sm text-gray-500">Course</p>
                <p class="font-semibold text-gray-700">{{student.course}}</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="bg-blue-100 text-blue-600 p-3 rounded-lg"><span class="font-semibold text-xl">ğŸ“…</span></div>
              <div>
                <p class="text-sm text-gray-500">Year Level</p>
                <p class="font-semibold text-gray-700">{{student.year_level}}</p>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <div class="bg-blue-100 text-blue-600 p-3 rounded-lg"><span class="font-semibold text-xl">âœ‰ï¸</span></div>
              <div>
                <p class="text-sm text-gray-500">Email Address</p>
                <p class="font-semibold text-gray-700">{{student.email}}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: QR Code & Actions -->
        <div class="flex flex-col items-center justify-start gap-6 bg-gray-50/50 p-6 rounded-xl border">
          <h2 class="text-lg font-bold text-gray-700">Your Digital ID</h2>
          <div class="bg-white p-3 rounded-lg shadow-md border">
            <img src="{{student.qr_code}}" alt="QR Code" class="w-40 h-40" />
          </div>
          <p class="text-center text-sm text-gray-500 -mt-2">Scan this code for quick access to your details.</p>
          
          <a href="/student/{{student.id}}/download-id" 
             class="w-full flex items-center justify-center gap-2 mt-4 bg-blue-600 hover:bg-blue-700 text-white font-bold px-6 py-3 rounded-lg shadow-md transition-all transform hover:scale-105">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
            Download ID
          </a>
        </div>

      </div>
    </div>
  </div>
{{> footer }}
